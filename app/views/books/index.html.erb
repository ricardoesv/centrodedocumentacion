<p id="notice"><%= notice %></p>

<h1>Biblioteca General</h1>
<%= link_to(new_book_path) do %>
          <i class="far fa-file-alt"></i> Libro Nuevo
          <% end %><br />
<br />
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th style="text-align: center;">Datos Generales</th>
      <th style="text-align: center;">Datos de Edición</th>
      <th style="text-align: center;">Descripción</th>
      <th style="text-align: center;">Datos de Ubicación</th>
      <th style="text-align: center;">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td style="text-align: left; width: 250px; vertical-align:top;">
        <h7><verde><i class="fas fa-book"></i></verde> <%= book.titulo %></h7><br />
        <h8><%= book.subtitulo %></h8><br /><br />
        <h9><verde><i class="fas fa-user"></i> </verde><%= book.autor %></h9><br />
        <h10><%= book.colaborador %></h10><br /></td>
        
        
        <td style="text-align: left; width: 250px; vertical-align:top;"><h7><verde><i class="fas fa-university"></i></verde> <%= book.editorial %></h7><br />
        <h8>Edición: <%= book.edicion %>&nbsp;
        <%= book.ano_publicacion %></h8><br /><br />
        <h9>Serie: <%= book.serie %></h9><br />
        <h10>Traducción: <%= book.traduccion %><br />
        ISBN: <%= book.isbn %></h10></td>
        
        <td style="text-align: left; width: 250px; vertical-align:top;"><h7>Índice: <%= book.indice %><br />
        Bibliografía: <%= book.bibliografia %></h7><br /><br />
        <h8><%= book.contenido %></h8></td>
        
        <td style="text-align: left; width: 250px; vertical-align:top;"><h7>Clasificación: <%= book.clasificacion %><br />
        Acervo: <%= book.acervo %><br />
        Apéndice: <%= book.apendice %></h7><br /><br />
        </h8><verde><i class="fas fa-map-marker-alt"></i></verde> <%= book.anaquel %>
        <%= book.peldano %><br />
        Disponibles: <%= book.cantidad %></h8></td>
        
        <td style="text-align: center; width: 100px; vertical-align:middle;">
       
          
          <%= link_to(edit_book_path(book)) do %>
          <i class="fas fa-pencil-alt"></i>
          <% end %><br /><br />
          
        <%= link_to(book, method: :delete, data: { confirm: 'Está seguro de eliminarlo?' }) do %>
          <i class="fas fa-trash-alt"></i>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


